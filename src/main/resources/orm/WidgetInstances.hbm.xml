<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"classpath://org/hibernate/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mk.portal.framework.entity.WidgetInstanceEntity" table="widget_instances" catalog="portal">
    	<id name="id" type="int">
            <column name="id" length="45" />
            <generator class="increment" />
        </id>
       <property name="widgetId" type="string">
       		<column name="widget_id" length="45"/>
       	</property>
       	<property name="pageId" type="string">
       		<column name="page_id" length="45"/>
       	</property>
        <property name="area" type="string">
            <column name="area" length="45"/>
        </property>
         <property name="order" type="int">
            <column name="order"/>
        </property>
    </class>
</hibernate-mapping>
